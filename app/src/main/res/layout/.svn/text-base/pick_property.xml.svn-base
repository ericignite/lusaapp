<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/backyardx"
    android:scaleType="centerCrop"
    android:gravity="center|top">


    <TextView

        android:id="@+id/crew_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Crew w1 Riley Compton"
        android:textSize="20sp"
        android:background="#b4ffffff"
        android:padding="15dp"
        android:gravity="center|top"
        android:maxHeight="55dp"
        android:layout_alignTop="@+id/mainBg"
        android:layout_alignLeft="@+id/mainBg"
        android:layout_alignStart="@+id/mainBg" />

    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Adjust Crew"
        android:id="@+id/adjust_crew"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:singleLine="true"
        android:background="#0099cc"
        android:padding="15dp"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/btnStartLogin"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <TextView

        android:id="@+id/property_titles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose Property In Route"
        android:textSize="20sp"
        android:background="#b4ffffff"
        android:padding="15dp"
        android:gravity="center|top"
        android:maxHeight="55dp"
        android:layout_alignTop="@+id/mainBg"
        android:layout_alignLeft="@+id/mainBg"
        android:layout_alignStart="@+id/mainBg"
        android:layout_marginTop="50dp" />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#b4ffffff"
        android:id="@+id/tableLayout"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#0099CC"
            android:padding="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <TextView
                android:layout_width="370dp"
                android:layout_height="30dp"
                android:id="@+id/property_label"
                android:layout_column="0"
                android:text="Property"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/budget_hrs_label"
                android:layout_column="2"
                android:text="Budget Hrs"
                android:textSize="18sp"

                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/service_label"
                android:layout_column="2"
                android:text="Service"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:longClickable="true"
                android:textStyle="bold" />


        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/scrollView"
        android:background="#b4ffffff">


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="#b4ffffff"
            android:id="@+id/tableLayout2"
            android:layout_gravity="bottom"
            android:clipChildren="false"
            android:clipToPadding="false"></TableLayout>
    </ScrollView>



    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Select Out of Route Property"
        android:id="@+id/select_out_of_route"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:singleLine="true"
        android:background="#0099cc"
        android:padding="15dp"
        android:shadowColor="@color/abc_search_url_text_normal"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/tableLayout2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
</LinearLayout>