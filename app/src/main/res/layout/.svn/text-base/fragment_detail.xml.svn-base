<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.android.sunshine.app.DetailActivity">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/backyardx"
        android:adjustViewBounds="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:background="#ffffffff" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/home_btnStartLogin"

        android:layout_marginTop="54dp"
        android:background="#ff0099cc"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignRight="@+id/btnLinkToRegisterScreen"
        android:layout_alignEnd="@+id/btnLinkToRegisterScreen"
        android:layout_alignLeft="@+id/btnLinkToRegisterScreen"
        android:layout_alignStart="@+id/btnLinkToRegisterScreen" />

</RelativeLayout>
