<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:clickable="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mainBg"
            android:adjustViewBounds="false"
            android:src="@drawable/backyardx"
            android:scaleType="centerCrop"
            android:layout_weight="1.29"
            android:layout_gravity="center_horizontal|top"

            android:background="#000099CC" />
        <!--  View Title Label -->
    <!--  Email Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#ffffffff"
            android:layout_above="@+id/loginEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center"
            android:id="@+id/textView3"
            android:gravity="center"
            android:textStyle="bold" />
        <!--  Email TextField -->
        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="#ffffffff"
            android:layout_above="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="34dp"
            android:theme="@style/AppTheme" />
 
        <!--  Password Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#ffffffff"
            android:id="@+id/textView"
            android:layout_above="@+id/loginPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center" />
        <!--  Password TextField -->
        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:password="true" 
            android:singleLine="true"
            android:background="#ffffffff"
            android:layout_above="@+id/btnLogin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="34dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:theme="@style/AppTheme" />
 
        <!--  Error message -->
        <TextView android:id="@+id/login_error"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#e30000"
                    android:padding="10dip"
                    android:textStyle="bold"

            android:layout_below="@+id/btnLinkToRegisterScreen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />
 
        <!--  Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Login"

            android:layout_marginBottom="42dp"
            android:background="#0099CC"
            android:textColor="#ffffffff"
            android:layout_above="@+id/btnLinkToRegisterScreen"
            android:layout_alignLeft="@+id/btnLinkToRegisterScreen"
            android:layout_alignStart="@+id/btnLinkToRegisterScreen"
            android:theme="@style/AppTheme" />
 
        <!--  Link to Registration Screen -->
        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#0099CC"
            android:text="I don&apos;t have account. Register Me!"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOGIN"
        android:id="@+id/textView4"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:textSize="60dp"
        android:gravity="center" />
</RelativeLayout>
