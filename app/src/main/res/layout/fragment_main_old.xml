<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/current_date"
        android:text="@string/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/high_degrees"
        android:text="@string/high_degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/current_date"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"
        android:layout_alignParentStart="true"
        android:paddingTop="10sp" />

    <TextView
        android:id="@+id/low_degrees"
        android:text="@string/low_degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/high_degrees"
        android:layout_alignLeft="@+id/high_degrees"
        android:layout_alignStart="@+id/high_degrees" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignBottom="@+id/low_degrees"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
