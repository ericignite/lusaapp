<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backyardx">

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#00ffffff">

        <Button
            android:id="@+id/drive_next_property"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button"
            android:layout_marginTop="20dp"
            android:background="#0099CC"
            android:gravity="bottom|center"
            android:padding="10dp"
            android:text="Drive to Next Property"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/add_crew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:background="#0099CC"
            android:onClick="onAddCrewButtonClick"
            android:padding="10dp"
            android:text="Add Crew"
            android:textColor="#ffffff"
            android:layout_marginBottom="10dp"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_buttons"

        android:gravity="center|top"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:weightSum="1">

        <TextView

            android:id="@+id/crew_bar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mainBg"
            android:layout_alignStart="@+id/mainBg"
            android:layout_alignTop="@+id/mainBg"
            android:background="#b4ffffff"
            android:gravity="center|top"
            android:maxHeight="55dp"
            android:padding="15dp"
            android:text="Crew w1 Riley Compton"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/adjust_page_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/crew_bar_title"
            android:layout_marginTop="20dp"
            android:background="#d4ffffff"
            android:gravity="center"
            android:maxHeight="55dp"
            android:padding="15dp"
            android:text="Adjust Crew For Next Property"
            android:textSize="20dp" />

        <Button
            android:id="@+id/current_crew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="#0099CC"
            android:gravity="center"
            android:padding="10dp"
            android:text="Current Crew"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <ListView
            android:id="@+id/crew_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b4ffffff"

            >


        </ListView>
    </LinearLayout>
</RelativeLayout>
